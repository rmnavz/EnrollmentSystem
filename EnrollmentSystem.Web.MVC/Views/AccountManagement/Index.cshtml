@model IEnumerable<AccountViewModel>

<div class="row mb-2">
    <div class="col">
        @Html.FontAwesomeActionLink("fas fa-plus", "New Account", "Create", "AccountManagement", null, new { @class = "btn btn-block btn-primary loadDynamicModal" })
    </div>
</div>
    @if (Model.Count() > 0)
    {

        <table class="table">
            <thead>
                <tr>
                    <th> BASIC INFO </th>
                    <th> ACCOUNT TYPE </th>
                    <th> CREATED DATE </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Account in Model)
                {
                <tr>
                    <td>
                        <div class="row">
                            <div class="col-4">
                                <img class="btn-md rounded-circle" src="@Account.ProfileImage" alt="@Account.EmailAddress" height="32" width="32">
                            </div>
                            <div class="col-8">
                                <div class="row">
                                    <div class="col-12">
                                        <span>@Account.FirstName @Account.LastName</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <small>@Account.EmailAddress</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-12">
                                @Account.AccountType
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-12">
                                @Account.Created.ToUniversalTime()
                            </div>
                        </div>
                    </td>
                    <td>
                        <div class="row">
                            <div class="col-12">

                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle fas fa-dot-circle" type="button" id="@("dropdown" + Account.ID)" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                    <div class="dropdown-menu" aria-labelledby="@("dropdown" + Account.ID)">
                                        @Html.ActionLink("Edit", "Edit", "AccountManagement", new { ID = Account.ID }, new { @class = "btn loadDynamicModal dropdown-item" })
                                        @Html.ActionLink("Remove", "Remove", "AccountManagement", new { ID = Account.ID }, new { @class = "btn loadDynamicModal dropdown-item" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

        

